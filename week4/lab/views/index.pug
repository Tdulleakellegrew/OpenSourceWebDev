extends layout

block content
  h1= title
  p
    a(href="./view") View
  h2=message
  form(action='/' method='post')
    input#fName(type='text' name='fName')
    input#fName(type='text' name='lName')
    select#fName(name='dep')
      option Accountant
      option Software Engineer
      option Officer
    input#fName(type='text' name='jTitle')
    input#fName(type='number' name='salary')
    input#fName(type='submit' name='submit')
